{% extends "At21EBoxOfficeBundle::layout.html.twig" %}

{% trans_default_domain 'At21EBoxOfficeBundle' %}

{% block body %}
    <div class="sixteen wide column">
        <form class="ui form" action="{{ path('at21_eboxoffice_theatre_new') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
            <h4 class="ui dividing header">{{ 'theatre.new.header'|trans }}</h4>
            <div class="four fields">
                <div class="ui input field">
                    {{ form_label(form.numberOfRows) }}
                    {{ form_widget(form.numberOfRows) }}
                </div>
                <div class="ui input field">
                    {{ form_label(form.numberOfSeatsPerRow) }}
                    {{ form_widget(form.numberOfSeatsPerRow) }}
                </div>
                <div class="ui input field">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
                {{ form_widget(form._token) }}
            </div>
            <div>
                <input class="ui submit button" type="submit" value="{{ 'theatre.new.submit'|trans }}" />
            </div>
        </form>
    </div>
{% endblock %}